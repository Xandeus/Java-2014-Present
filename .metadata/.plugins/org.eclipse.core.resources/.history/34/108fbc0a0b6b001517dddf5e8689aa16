package Chess;

import java.awt.Color;

public class Pawn extends GamePiece {

	public Pawn(int x, int y, Color color,int posX, int posY) {
		super(x, y, color,posX,posY);
	}

	public void move(int x, int y) {
		// TODO Auto-generated method stub

	}

	public void avaliableMoves(GamePiece[][] pieces) {
		// TODO Auto-generated method stub
		for (int y = this.getPosY()+ 1; y < this.getPosY() + 3; y++) {
			if (pieces[this.getX()][y] == null) {
				System.out.println("Spot at " + this.getPosX() + " " + y);
			}
		}
	}

}
