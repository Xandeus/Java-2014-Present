package Fractals;

public class Shape {
	int x,y,r;
	boolean isActive = false;
	public Shape(int x, int y, int r){
		this.x = x;
		this.y = y;
		this.r = r;
		
	}
	public int getX(){
		return x;
	}
	public int getY(){
		return y;
	}
	public int getR(){
		return r;
	}
	public boolean isActive(){
		return isActive;
	}
	public void changeState(){
		isActive = !isActive;
	}
}
