package space;

public class Player {
	int windowLocationX, windowLocationY;
	int width, height;
	CelestialBody currentBody;
	public Player(int x, int y,int w,int h,CelestialBody b){
		windowLocationX = x;
		windowLocationY = y;
		width = w;
		height = h;
		currentBody = b;
	}
	public int getWindowLocationX(){
		return windowLocationX;
	}
	public int getWindowLocationY(){
		return windowLocationY;
	}
	public CelestialBody getCurrentBody(){
		return currentBody;
	}
	public void setLocationX(int x){
		windowLocationX = x;
	}
	public void setLocationY(int y){
		windowLocationY = y;
	}
	public void setBody(CelestialBody b){
		currentBody = b;
	}
}
